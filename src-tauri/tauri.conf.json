{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Knights Launcher",
	"version": "0.1.0",
	"identifier": "knights-launcher",
	"build": {
		"frontendDist": "../dist/browser",
		"devUrl": "http://localhost:1420",
		"beforeDevCommand": "npm run start",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "Knight's Launcher",
				"width": 1024,
				"height": 700,
				"minWidth": 800,
				"minHeight": 560,
				"resizable": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"windows": {
			"nsis": null
		},
		"icon": [
			"icons/app-icon.png",
			"icons/icon.ico"
		]
	}
}
