{
    "identifier": "default",
    "description": "Default permissions for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "shell:allow-open",
        {
            "identifier": "shell:allow-spawn",
            "allow": [
                {
                    "name": "KaM_Remake",
                    "cmd": "KaM_Remake.exe",
                    "args": [],
                    "sidecar": false
                },
                {
                    "name": "sh",
                    "cmd": "sh",
                    "args": ["-c", {"validator": ".*"}],
                    "sidecar": false
                }
            ]
        },
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "cmd",
                    "cmd": "cmd.exe",
                    "args": ["/c", {"validator": ".*"}],
                    "sidecar": false
                }
            ]
        },
        {
            "identifier": "http:default",
            "allow": [
                {"url": "http://localhost:3001/*"},
                {"url": "http://127.0.0.1:3001/*"}
            ]
        },
        "fs:default",
        "fs:allow-appdata-write-recursive",
        "fs:allow-appconfig-write-recursive",
        "dialog:default"
    ],
    "remote": {
        "urls": [
            "http://localhost:3001/*",
            "http://127.0.0.1:3001/*"
        ]
    }
}
